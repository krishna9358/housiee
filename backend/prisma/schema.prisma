generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SERVICE_PROVIDER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// Pre-defined service categories managed by Admin
enum ServiceCategory {
  TRAVEL
  FOOD
  ACCOMMODATION
  LAUNDRY
}

model user {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions Session[]
  accounts Account[]

  serviceProvider ServiceProvider?
  bookings        Booking[]
  reviews         Review[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String

  user user @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user user @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
}

// Admin-defined service templates
model ServiceTemplate {
  id          String          @id @default(cuid())
  name        String          @unique
  category    ServiceCategory
  description String
  icon        String?
  basePrice   Float           @default(0)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  services Service[]

  @@index([category])
  @@map("service_templates")
}

model ServiceProvider {
  id           String   @id @default(cuid())
  userId       String   @unique
  businessName String
  description  String?
  phone        String?
  address      String?
  city         String?
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  services Service[]

  @@index([userId])
  @@map("service_providers")
}

model Service {
  id            String          @id @default(cuid())
  providerId    String
  templateId    String?
  title         String
  description   String
  category      ServiceCategory
  basePrice     Float           // Price in Rupees (INR)
  capacity      Int             @default(1) // Max bookings/seats available
  bookedCount   Int             @default(0) // Current bookings count
  duration      Int?            // Duration in minutes (for time-based services)
  images        String[]
  location      String?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  provider             ServiceProvider       @relation(fields: [providerId], references: [id], onDelete: Cascade)
  template             ServiceTemplate?      @relation(fields: [templateId], references: [id])
  accommodationDetails AccommodationService?
  foodDetails          FoodService?
  travelDetails        TravelService?
  laundryDetails       LaundryService?
  bookings             Booking[]
  reviews              Review[]

  @@index([providerId])
  @@index([category])
  @@index([isActive])
  @@index([templateId])
  @@map("services")
}

model AccommodationService {
  id           String   @id @default(cuid())
  serviceId    String   @unique
  propertyType String
  bedrooms     Int
  bathrooms    Int
  maxGuests    Int
  amenities    String[]
  checkInTime  String?
  checkOutTime String?

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("accommodation_services")
}

model FoodService {
  id                String   @id @default(cuid())
  serviceId         String   @unique
  cuisineType       String
  mealTypes         String[]
  dietaryOptions    String[]
  servingSize       String?
  deliveryAvailable Boolean  @default(false)
  preparationTime   Int?     // in minutes

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("food_services")
}

model TravelService {
  id            String   @id @default(cuid())
  serviceId     String   @unique
  vehicleType   String
  seatingCapacity Int
  acAvailable   Boolean  @default(false)
  fuelIncluded  Boolean  @default(false)
  driverIncluded Boolean @default(true)
  pickupLocation String?
  dropLocation  String?

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("travel_services")
}

model LaundryService {
  id              String   @id @default(cuid())
  serviceId       String   @unique
  serviceTypes    String[] // wash, iron, dry-clean
  pricePerKg      Float?
  pricePerPiece   Float?
  expressAvailable Boolean @default(false)
  pickupAvailable Boolean  @default(true)
  deliveryAvailable Boolean @default(true)

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("laundry_services")
}

model Booking {
  id          String        @id @default(cuid())
  userId      String
  serviceId   String
  startDate   DateTime
  endDate     DateTime?
  quantity    Int           @default(1) // Number of seats/units booked
  totalPrice  Float         // Price in Rupees (INR)
  status      BookingStatus @default(PENDING)
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user    user    @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([serviceId])
  @@index([status])
  @@map("bookings")
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  serviceId String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    user    @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([userId, serviceId])
  @@index([serviceId])
  @@map("reviews")
}
